package counterpackage;
import java.util.ArrayList;


public class MainCounter {

	public static void main(String[] args) {
		
		Counter counter = new Counter();
		counter.addNumber(1);
		counter.addNumber(3);
		counter.addNumber(5);
		counter.addNumber(7);
		counter.addNumber(9);
		counter.addNumber(10);
		
		counter.cantidadDePares();

	}

}

class Counter{
	
	ArrayList< Integer > numeros = new ArrayList<>(10);	
	ArrayList< Integer > pares   = new ArrayList<>(10);	
	ArrayList< Integer > impares = new ArrayList<>(10);	

	public void addNumber(Integer unNumero) {
		
		this.numeros.add(unNumero );
	}
	
	public void agregarNumeroSiEsPar(int numero) {
		
		if( this.numeros.get(numero) % 2 == 0) {
			pares.add(numeros.get(numero));
	
	}
		
	}
	
	public int cantidadDePares() {
		
		for (int i = 0; i < numeros.size(); i++)
		{
			
			
			
		}
		
		return this.pares.size();
		
		
	}
	
	public void cantidadDeImpares() {
		
		for (int i = 0; i < numeros.size(); i++){
			if( i % 2  != 0) impares.add(i);		
		}
	
	}
	
	
}